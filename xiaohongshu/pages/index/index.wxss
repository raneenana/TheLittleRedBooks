page {
  width: 100%;
  height: 100%;
  margin:0;
}

.wrap {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
}

.search {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.search view{
  width:90%;
  height:70%;
  margin:0 5%;
  border-radius: 40rpx;
  background: #f5f5f5;
}
.search view icon{
  margin-left:20px; 
}
.search view input {
  display: inline-block;
  margin-top:5px;
}
.section{
  width:100%;
  flex:1;
  display: flex;
  flex-direction: column;
}
.section .nav{
  width:100%;
  height:100rpx;
  border-top:2px solid #f5f5f5;
  white-space: nowrap;
}
.section .nav scroll-view{
  width:100%;
  white-space: nowrapï¼›
}
.section .nav view{
  display: inline-block;
  padding:30rpx;
}
.scroll-list{
  width: 100%;
  flex: 1;
  overflow: hidden;
}
.main{
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.item{
  width:46%;
  flex-shrink: 0;
  margin-bottom:20px;
}
.item>image{
  width:100%;
}
.item>text{
  line-height: 40rpx;
}
.active{
  font-weight: bold;
  color: red;
}